  <!-- FIM HEADER -->

  <main>
    <h4 class="mt-3 text-center">Cadastre seu Projeto</h4>
    <p class="text-center lead">Crie projetos educacionais e compartilhe conhecimentos com o ActNow</p>

    <div class="form-container container mx-4 mx-md-auto mt-2 pb-5 pb-md-2 mb-5">
      <div class="row">
        <div class="col-12 col-md-6 d-flex align-items-center">
          <img class="login-widget img-fluid" src="../assets/img/project-widget.png" alt="">
        </div>

        <div class="col-12 col-md-6">
          <form id = "cadastroProjetoForm" action="http://localhost:3000/criar-projeto" method = "POST">
            <div class="form-group p-2">
              <h5 class="mt-2">Informações Básicas</h5>
              <span class="bi bi-balloon"></span>
              <label for="projeto-nome">Título do Projeto</label>
              <input class="form-control font-weight-lighter" id="projeto-nome" name="projNome" type="text">
            </div>

            <div class="form-group p-2">
              <span class="bi bi-box-seam "></span>
              <label for="proj-descricao">Descrição do Projeto</label>
              <textarea class="form-control input-sm" id="proj-descricao" name="projDescricao" type="text" placeholder = "O projeto se trata de uma iniciativa para promover aulas de informática..."></textarea>
              

            </div>

            <div class="form-group p-2">
                <h5 class="mt-2">Mais informações</h5>

                <span class="bi bi-people"></span>
                <label for="projeto-publico">Público-Alvo</label>
                <input class="form-control font-weight-lighter" id="projeto-publico" name="projPublico" type="text" placeholder = "Estudantes da rede de ensino pública">
                </div>

                <div class="form-group p-2">
                <span class="bi bi-card-text "></span>
                <label for="proj-importancia">Justifique a importância do seu projeto</label>
                <textarea class="form-control input-sm" id="proj-importancia" name="projJustificativa" type="text">
                </textarea>
                </div>

                <div class="form-group p-2">
                <span class="bi bi-card-text "></span>
                <label for="proj-objetivos">Fale sobre os objetivos do Projeto</label>
                <textarea class="form-control input-sm" id="proj-objetivos" name="projObjetivos" type="text">
                </textarea>
                </div>


                <div class="form-group p-2">
                    <h5 class="mt-2">Datas</h5>
                    <label for="projData-inicio">Data de início do Projeto</label>
                    <input class = "form-control input-sm" id= "projData-inicio" name = "projDataInicio" type="date">    
                </div>

            <div class="d-flex justify-content-center">
              <input type="submit" value="Continuar" class="mt-3 btn btn-primary">
            </div>

          </form>
        </div>

      </div>

    </div>
  </main>
  <!-- FIM LOGIN FORM -->


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <script>
    // Recupera o valor do parâmetro 'alerta' da URL
    const urlParams = new URLSearchParams(window.location.search);
    const alerta = urlParams.get('alerta');

    // Se houver uma mensagem de alerta, exibe-a
    if (alerta) {
        alert(decodeURIComponent(alerta)); // Exibe o alerta decodificado
    }
  </script>






