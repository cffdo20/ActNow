<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https:/use.fontawesome.com/releases/v5.15.4/css/solid.css"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.15.4/css/fontawesome.css"
    />

  <link rel="shortcut icon" href="../assets/img/favicon.ico" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="../assets/js/visualizar-projeto.js" defer></script>
  <link rel="stylesheet" href="../assets/css/index-style.css">
  <link rel="stylesheet" href="../assets/css/login-style.css">
  <link rel="stylesheet" href="../assets/css/visualizar-proj.css">

  <title>Actnow - Visualizar Projeto</title>
</head>

<body>
  <!-- HEADER -->
  <nav class="navbar navbar-dark sticky-top navbar-expand-lg">
    <div class="container-fluid">

      <a href="/" class="name-logo fw-bold "><img class="img img-fluid me-2" src="../assets/img/blue-actnow-logo.png" alt="Logo do ActNow">ActNow</a>

      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">

          <li class="nav-item">
            <!-- visualização dos projetos pode ser aqui - por enquanto (?) -->
            <a href="/projetos" class="nav-link text-dark">
              <span class="fa-solid fa-folder-tree"></span>
              Projetos</a>
          </li>

          <li class="nav-item">
            <a href="" class="btn me-3">
              <span class="fa-solid fa-user"></span>
              Perfil</a>
          </li>

        </ul>
      </div>

    </div>
  </nav>
  <!-- FIM HEADER -->


  <main>
    <div class="proj-container main-box container mt-4">
      <div class="row">
        <div class="col-lg-8 first-container">
          <div class="div">
            <div class="proj-header d-flex justify-content-between align-items-center">
              <h2 class = "proj-titulo"><%= Titulo %> </h2>
              <div class="d-flex align-items-center">
                <a href="" class = "trash-icon m-4">
                  <span id = "trashBtn" class="fa fa-solid fa-trash"></span>
                  <span class="tooltiptext">Excluir projeto</span>
                </a>
                <button id = "new-activity-button" class = "create-activity-button btn btn-primary" href="">
                  <span class="fa-solid fa-plus"></span>Cadastrar Atividade</button>
              </div>  
            </div>
            <div class="atv-content mb-3">
              <span class = "d-flex align-items-center">Data de início</span>
              <p class = "lead"> <%= Inicio %> </p>
            </div>  
            <div class="atv-content mb-3" id = "description-container">
              <!-- <p>Data de início: 15/03/2024</p> -->
              <span class = "d-flex align-items-center">Descrição</span>
              <p class = "lead"> <%= Descricao %> </p>
            </div>  
            <!-- <button class = "btn"><span class="bi bi-pencil-fill"></s</p> -->

              <div class="atv-content mb-3" id = "justify-container">
                <span>Justificativa</span>
                <p class="lead">
                  <%= Justificativa %> 
                </p>
              </div>

              <div class="atv-content mb-3" id = "goals-container">
                <ul class = "pt-4">
                  <li class = ""> <%= Objetivos %> </li>
                </ul>
              </div>

              <div class="atv-content mb-3" id = "audience-container">
                <span class = "publico-alvo">Público-Alvo</span>
                <p class="lead">
                  <%= Publico %>
                </p>
              </div>

            
              
          </div>
        </div>
        

        <div class="col-lg-4">
          <div class="buttons-container">
            <div class="line"></div>
            
            <!-- <a href="/editar-projeto" class = "pencil-icon">
              <span class="fa fa-solid fa-pen-to-square"></span>
              <span class="tooltiptext">Editar</span>
            </a> -->
            <!-- <a href="" class = "circle-icon">
              <span class="fa-solid fa-circle-plus"></span>
              <span class="tooltiptext"> Adicionar atividade</span>
            </a> -->

              <!-- <a href="" class = "trash-icon">
                <span id = "trashBtn" class="fa fa-solid fa-trash"></span>
                <span class="tooltiptext">Excluir projeto</span>
              </a> -->

            <!-- Modal para EXCLUSÃO do projeto -->
            <dialog>
              <div class="dialogExclusao">
                <span id = "exclamation-triangle" class="bi bi-exclamation-triangle-fill"></span>
                <span>Deseja excluir permanentemente o projeto?</span>
                <span id = "dialog-warning">Essa ação não poderá ser desfeita</span>
                <!-- Form apenas com submit para exclusão (?) -->
                <form id = "exclusaoProjetoForm" action="/projetos/excluir" method = "POST" >
                  <!-- input oculto para relacionar edição a projeto específico  -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">
                  
                  <input id = "delete-project-button" type="submit" value="Sim, excluir">
                </form>
                <button id = "returnPopBtn">Manter projeto</button>
              </div>
            </dialog>

            <!-- Modal para editar descrição do projeto -->
            <dialog id = "edit-description-dialog" class = "edit-field-dialog">
              <div class="meuDialog">
            
                <div class="edit-description-header d-flex justify-content-between mb-2">
                  <span>Editar Descrição do Projeto</span>
                  <button id = "close-description-dialog"><span class="fa-solid fa-xmark"></span></button>
                </div>

                <form class = "edit-dialog-form" id = "exclusaoProjetoForm" action="/projetos/editar-descricao" method = "POST" >
                  <!-- input oculto para relacionar edição a projeto específico. Pode ser o ID do projeto (!?) -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">

                  <textarea class = "input-field-dialog form-control" name = "projDescricao" type="text" placeholder = "Nova descrição..."></textarea>
                  <input type="submit" value="Salvar" class = "submit-field-dialog btn btn-primary text-light">
                </form>
              
                <!-- <button id = "returnPopBtn">Manter projeto</button> -->
              </div>
            </dialog>

            <!-- Modal para editar justificativa do projeto -->
            <dialog id = "edit-justify-dialog" class = "edit-field-dialog">
              <div class="meuDialog">
                
                <div class="edit-description-header d-flex justify-content-between mb-2">
                  <span>Editar Justificativa do Projeto</span>
                  <button id = "close-justify-dialog"><span class="fa-solid fa-xmark"></span></button>
                </div>

                <form class = "edit-dialog-form" id = "exclusaoProjetoForm" action="/projetos/editar-justificativa" method = "POST" >
                  <!-- input oculto para relacionar edição a projeto específico  -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">

                  <textarea class = "input-field-dialog form-control" type="text" name = "projJustificativa" placeholder = "Nova justificativa..."></textarea>
                  <input type="submit" value="Salvar" class = "submit-field-dialog btn btn-primary text-light">
                </form>
  
                <!-- <button id = "returnPopBtn">Manter projeto</button> -->
              </div>
            </dialog>

            <!-- Modal para editar objetivos do projeto -->
            <dialog id = "edit-goals-dialog" class = "edit-field-dialog">
              <div class="meuDialog">
                
                <div class="edit-description-header d-flex justify-content-between mb-2">
                  <span>Editar Objetivos do Projeto</span>
                  <button id = "close-goals-dialog"><span class="fa-solid fa-xmark"></span></button>
                </div>

                <form class = "edit-dialog-form" id = "exclusaoProjetoForm" action="/projetos/editar-objetivos" method = "POST" >
                  <!-- input oculto para relacionar edição a projeto específico  -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">

                  <textarea class = "input-field-dialog form-control" name = "projObjetivos" type="text" placeholder = "Novos objetivos..."></textarea>
                  <input type="submit" value="Salvar" class = "submit-field-dialog btn btn-primary text-light">
                </form>
                </form>
                <!-- <button id = "returnPopBtn">Manter projeto</button> -->
              </div>
            </dialog>

            <!-- Modal para editar público-alvo do projeto -->
            <dialog id = "edit-audience-dialog" class = "edit-field-dialog">
              <div class="meuDialog">
                
                <div class="edit-description-header d-flex justify-content-between mb-2">
                  <span>Editar Público-Alvo do Projeto</span>
                  <button id = "close-audience-dialog"><span class="fa-solid fa-xmark"></span></button>
                </div>

                <form class = "edit-dialog-form" id = "exclusaoProjetoForm" action="/projetos/editar-publico" method = "POST" >
                  <!-- input oculto para relacionar edição a projeto específico  -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">

                  <input class = "input-field-dialog form-control" type="text" name = "projPublico" placeholder = "Novo público-alvo...">
                  <input type="submit" value="Salvar" name = "" class = "submit-field-dialog btn btn-primary text-light">
                </form>
                
                <!-- <button id = "returnPopBtn">Manter projeto</button> -->
              </div>
            </dialog>


            <!-- modal para cadastrar nova atividade ao projeto -->
            <dialog id = "create-new-activity" class = "edit-field-dialog">
              <div class="meuDialog">
                
                <div class="edit-description-header d-flex justify-content-between mb-2">
                  
                  <span>Cadastrar nova Atividade</span>
                  <button id = "close-activity-dialog"><span class="fa-solid fa-xmark"></span></button>
                </div>

                <!-- form para cadastrar atividade -->
                <form class = "edit-dialog-form" id = "exclusaoProjetoForm" action="/atividades/criar" method = "POST" >
                  <!-- input oculto enviando algum dado único do projeto para garantir que a atividade esteja relacionado a um projeto específico  -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">

                  <input class = "input-field-dialog form-control" type="text" name = "tituloAtividade" placeholder = "Título"></input>

                  <textarea class = "input-field-dialog form-control" type="text" name = "descricaoAtividade" placeholder = "Descrição"></textarea>

                  <input class = "input-field-dialog form-control" type="date" name = "dataEntregaAtividade" placeholder = "Data da atividade...">

                  <input type="submit" value="Salvar" class = "submit-field-dialog btn btn-primary text-light">
                </form>
          
                <!-- <button id = "returnPopBtn">Manter projeto</button> -->
              </div>
            </dialog>

            <!-- modal para excluir atividade -->
            <dialog id = "exclusaoFormModal">
              <div class="dialogExclusao">
                <span id = "exclamation-triangle" class="bi bi-exclamation-triangle-fill"></span>
                <span>Deseja excluir a atividade?</span>
                <span id = "dialog-warning">Essa ação não poderá ser desfeita</span>
                <!-- Form apenas com submit para exclusão (?) -->
                <form id = "exclusaoAtividadeForm" action="/atividades/excluir" method = "POST" >
                  <!-- input oculto para relacionar edição a projeto específico  -->
                  <input type="hidden" name="projNome" value="<%= Titulo %>">
                  <input type="hidden" name="tituloAtividade" value="">
                  <input id = "delete-project-button" type="submit" value="Sim, excluir">
                </form>
                <button id = "close-delete-activity-modal">Manter atividade</button>
              </div>
            </dialog>

            <a href="/recrutar-voluntario" class = "recruit-btn">
              <span class="fa-solid fa-users"></span>
              Recrutar</a>
          </div>

          <!--  quando esses dados estiverem sendo cadastrados realmente, receber como array e usar map() -->
          <h4 id = "activity-calendar" class = "fw-bold">Atividades</h4>
          <% if (Atividades && Atividades.length > 0 && Atividades.every(atividade => !atividade.titulo || !atividade.descricao) ) { %>
            <div class="error-container">
              <p></p>
            </div>
          <% } else if (typeof Atividades !== 'undefined' && Atividades.length > 0) { %>
            <% Atividades.forEach(function(atividade, index) { %>
              <div class="activities-calendar">
                <div class="activity-container mb-2 d-flex align-items-center">
                  <div class="d-flex flex-column m-1">
                    <div class="activity-header">
                      <span class = "activity-span"> 
                        <span class="bi bi-sticky-fill"></span>
                        <%= atividade.titulo %> </span>
                      <span class="fa fa-solid fa-trash delete-activity-btn" data-titulo = "<%= atividade.titulo %>"></span>
                    </div>
                      <p><%= atividade.descricao %></p>
                      <p class="activity-span"><%= atividade.Entrega %></p>
                  </div>
                </div>
              </div>
            <% }); %>
          <% } %>
          
        </div>
      </div>
    </div>

    </div>
    
    
  </main>
  


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <% if (typeof alerta !== 'undefined' && alerta) { %>
    <script>
        // JavaScript embutido para exibir o alerta passado do Node.js
        window.onload = function() {
            alert("<%= alerta %>");
        };
    </script>
    <% } %>






</body>

</html>
