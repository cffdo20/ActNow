<body>

      <!-- HEADER -->
  <nav class="navbar navbar-dark sticky-top navbar-expand-lg">
    <div class="container-fluid">

      <a href="/" class="name-logo fw-bold "><img class="img img-fluid me-2" src="../assets/img/blue-actnow-logo.png"
          alt="Logo do ActNow">ActNow</a>

      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">

          <li class="nav-item">
            <a href="" class="nav-link text-dark">Áreas</a>
          </li>

          <li class="nav-item">
            <a href="" class="nav-link text-dark">Contatos</a>
          </li>

          <li class="nav-item me-2">
            <a href="/" class="nav-link text-dark">Início</a>
          </li>

          <li class="nav-item">
            <a href="" class="btn me-3">
              <span class="fa-solid fa-user"></span>
              Perfil</a>
          </li>

          <!-- <li class="nav-item">
                    <a href="" id = "btn-tema" class="btn me-3">Tema</a>
                </li> -->

        </ul>
      </div>

    </div>
  </nav>
  <!-- FIM HEADER -->

  <!-- Possivelmente... -->
  <div class="container main-container">
    <h4 class="mt-3 text-center fw-bold">Seus Projetos</h4>
    <p class="text-center register-text">Visualize seus projetos criados</p>

    <div class="row">
      <% if (typeof alerta !== 'undefined' && alerta) { %>
        <div class="error-container">
          <p><%= alerta %></p>
        </div>
      <% } else if (typeof Projetos !== 'undefined' && Projetos.length > 0) { %>
        <% Projetos.forEach(function(projeto, index) { %>
          <div class="col-12 mb-3">
            <div class="project-container">
              <div class="project-main-info d-flex">
                <span class="bi bi-kanban me-2"></span>
                <a href="#" onclick="document.getElementById('form_<%= index %>').submit()"><%= projeto.Titulo %></a>
                <form id="form_<%= index %>" action="/visualizar-projeto" method="POST" style="display:none;">
                  <input type="hidden" name="projNome" value="<%= projeto.Titulo %>">
                </form>
              </div>
              <div class="information">
                <p class="lead"><%= projeto.Descricao %></p>
              </div>
            </div>
          </div>
        <% }); %>
      <% } %>
      <div class="d-flex justify-content-center">
        <a href="/criar-projeto" class="main-btn btn mt-2">
          <span class="fa-solid fa-plus"></span>
          Criar novo Projeto</a>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
