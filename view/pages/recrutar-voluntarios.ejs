<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https:/use.fontawesome.com/releases/v5.15.4/css/solid.css"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.1node 5.4/css/fontawesome.css"
    />

  <link rel="shortcut icon" href="../assets/img/favicon.ico" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="../../assets/js/recrutar-voluntario.js" defer></script>
  <!-- <script src="assets/js/script.js" defer></script> -->
  <link rel="stylesheet" href="../../assets/css/recrutar-voluntario.css">
  <link rel="stylesheet" href="../../assets/css/index-style.css">
  <link rel="stylesheet" href="../../assets/css/login-style.css">

  <title>Recrutar Voluntários</title>
</head>
<body>

      <!-- HEADER -->
  <nav class="navbar navbar-dark sticky-top navbar-expand-lg">
    <div class="container-fluid">

      <a href="http://localhost:3000" class="name-logo fw-bold "><img class="img img-fluid me-2" src="../../assets/img/blue-actnow-logo.png"
          alt="Logo do ActNow">ActNow</a>

      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">

          <li class="nav-item">
            <a href="" class="btn me-3">
              <span class="fa-solid fa-user"></span>
              Perfil</a>
          </li>

          <!-- <li class="nav-item">
                    <a href="" id = "btn-tema" class="btn me-3">Tema</a>
                </li> -->

        </ul>
      </div>

    </div>
  </nav>
  <!-- FIM HEADER -->


  <div class="container main-container">
    <h4 class="mt-3 text-center fw-bold">Recrute voluntários</h4>
    <p class="text-center recruit-text">Selecione os voluntários que você deseja recrutar!</p>

    <div class="row">
      <div class="col-lg-2 filter-column mb-3">
        <form id = "recrutarVoluntarioForm" action="/voluntarios/recrutar/filtrar" method = "POST">
          <div class="d-flex p-1 justify-content-between mt-2">
            <div class="d-flex">
              <span class="bi bi-funnel pe-2"></span>
              <p>Filtros</p>
            </div>
            <span id = "trashBtn" class="bi bi-trash"></span>
          </div>

          <div class="habilidades-container">
            <div class = "d-flex mt-2">
              <span class="bi bi-list-check"></span>
              <p class = "lead ms-2">Habilidades</p>
            </div>
            <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Artesanato" id="artesanato" name="voluntarioHabilidades">
              <label for="artesanato" class="form-check-label">Artesanato</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Marcenaria" id="marcenaria" name="voluntarioHabilidades">
              <label for="marcenaria" class="form-check-label">Marcenaria</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Costura" id="costura" name="voluntarioHabilidades">
              <label for="costura" class="form-check-label">Costura</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Cerâmica" id="ceramica" name="voluntarioHabilidades">
              <label for="ceramica" class="form-check-label">Cerâmica</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Pintura" id="pintura" name="voluntarioHabilidades">
              <label for="pintura" class="form-check-label">Pintura</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Jardinagem" id="jardinagem" name="voluntarioHabilidades">
              <label for="jardinagem" class="form-check-label">Jardinagem</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Construção Civil" id="construcaoCivil" name="voluntarioHabilidades">
              <label for="construcaoCivil" class="form-check-label">Construção Civil</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Encanador" id="encanador" name="voluntarioHabilidades">
              <label for="encanador" class="form-check-label">Encanador</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Eletricista" id="eletricista" name="voluntarioHabilidades">
              <label for="eletricista" class="form-check-label">Eletricista</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Esculpir" id="esculpir" name="voluntarioHabilidades">
              <label for="esculpir" class="form-check-label">Esculpir</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Joalheria" id="joalheria" name="voluntarioHabilidades">
              <label for="joalheria" class="form-check-label">Joalheria</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Tecelagem" id="tecelagem" name="voluntarioHabilidades">
              <label for="tecelagem" class="form-check-label">Tecelagem</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Serralheria" id="serralheria" name="voluntarioHabilidades">
              <label for="serralheria" class="form-check-label">Serralheria</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Bordado" id="bordado" name="voluntarioHabilidades">
              <label for="bordado" class="form-check-label">Bordado</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Vidraria" id="vidraria" name="voluntarioHabilidades">
              <label for="vidraria" class="form-check-label">Vidraria</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Encadernação" id="encardenacao" name="voluntarioHabilidades">
              <label for="encardenacao" class="form-check-label">Encadernação</label>
          </div>
          
          <div class="form-check pb-2 pb-md-1">
              <input type="checkbox" class="form-check-input" value="Carpintaria" id="carpintaria" name="voluntarioHabilidades">
              <label for="carpintaria" class="form-check-label">Carpintaria</label>
          </div>
        </div>

        <div class="disponibilidade-container">
          <div class = "d-flex mt-2">
            <span class="bi bi-calendar-date"></span>
            <p class = "lead ms-2">Dia da semana</p>
          </div>
          <select class = "form-select" name="filtroDiaSemana" id="filtroDiaSemana">
            <option value="Domingo">Domingo</option>
            <option value="Segunda-Feira" selected>Segunda</option>
            <option value="Terça-Feira">Terça</option>
            <option value="Quarta-Feira">Quarta</option>
            <option value="Quinta-Feira">Quinta</option>
            <option value="Sexta-Feira">Sexta</option>
            <option value="Sábado">Sábado</option>
          </select>
          
                <div class = "d-flex mt-2">
          <span class="bi bi-watch"></span>
          <p class = "lead ms-2">Turno</p>
                </div>
                
                <div class="form-check pb-2 pb-md-1">
          <input type="checkbox" name="voluntarioHorario" id="" class="form-check-input" value = "matutino">
          <label for="">Manhã</label>
                </div>
                <div class="form-check pb-2 pb-md-1">
          <input type="checkbox" name="voluntarioHorario" id="" class="form-check-input" value = "vespertino">
          <label for="">Tarde</label>
                </div>
                <div class="form-check pb-2 pb-md-1">
          <input type="checkbox" name="voluntarioHorario" id="" class="form-check-input" value = "noturno">
          <label for="">Noite</label>
                </div>
        </div>


      <div class="d-flex justify-content-center pb-2 mb-2">
        <input id = "filtrarBtn" type="submit" value="Filtrar" class="mt-3 btn btn-primary">
      </div>

        </form>
      </div>


      <div class="col-lg-10">
        <div class="container">
            <div class="row">
                <div class="d-flex justify-content-center">
                    <% if (typeof alerta !== 'undefined' && alerta) { %>
    
                        <div class="error-container">
                            <span class="bi bi-exclamation-circle"></span>
                            <p><%= alerta %></p>
                        </div>
    
                    <% } else if (typeof Voluntarios !== 'undefined' && Voluntarios.length > 0) { %>
    
                        <% Voluntarios.forEach(function(voluntario) { %>
                            <div class="container profile-container">
                                <div class = "user-main-info">
                                  <img src = "../assets/img/lorde.jpg" alt="">
                                  <h3><%= voluntario.Nome %></h3>
                                </div>
                                <div class="information">
                                    <span class="bi bi-file-person me-2"></span>
                                    <p class="lead">Bio: <%= voluntario.Bio %></p>
                                </div>
                                <div class="contacts">
                                    <span class="bi bi-telephone me-2"></span>
                                    <p class="contato">Contato: <%= voluntario.Contato %></p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a class="btn invite-btn" href="">
                                        Convidar
                                        <!-- <span class="bi bi-plus"></span> -->
                                    </a>
                                </div>
                                
                            </div>
                        <% }); %>
    
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>




    
</body>
</html>
