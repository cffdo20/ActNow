<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="../assets/img/favicon.ico" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="../assets/js/recrutar-voluntario.js" defer></script>
    <!-- <script src="assets/js/script.js" defer></script> -->
  <link rel="stylesheet" href="../assets/css/recrutar-voluntario.css">
  <link rel="stylesheet" href="../assets/css/index-style.css">
  <link rel="stylesheet" href="../assets/css/login-style.css">
  <link rel="stylesheet" href="../assets/css/visualizar-voluntarios.css">

  <title>Recrutar Voluntários</title>
</head>
<body>

      <!-- HEADER -->
  <nav class="navbar navbar-dark sticky-top navbar-expand-lg">
    <div class="container-fluid">

      <a href="/" class="navbar-brand text-light "><img class="img img-fluid me-2" src="../assets/img/logo.png"
          alt="Logo do ActNow">ActNow</a>

      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">

          <li class="nav-item">
            <a href="" class="nav-link text-light">Áreas</a>
          </li>

          <li class="nav-item">
            <a href="" class="nav-link text-light">Contatos</a>
          </li>

          <li class="nav-item me-2">
            <a href="/" class="nav-link text-light">Início</a>
          </li>

          <li class="nav-item">
            <a href="" class="btn me-3">Meu perfil</a>
          </li>

          

        </ul>
      </div>

    </div>
  </nav>
  <!-- FIM HEADER -->


  <div class="container main-container">
    <h4 class="mt-3 text-center"> Voluntários Correspondentes</h4>
    <p class="text-center lead"> Convide os voluntários que você deseja recrutar!</p>

    <div class="container">
      <% if (typeof alerta !== 'undefined' && alerta) { %>
        <script>
            // JavaScript embutido para exibir o alerta passado do Node.js
            window.onload = function() {
                alert("<%= alerta %>");
            };
        </script>
        <% } %>

        <% Voluntarios.forEach(function(voluntario) { %>
          <div class = "container profile-container">
              <h3>Nome: <%= voluntario.Nome %></h3>
              <div class="information">
                <span class = "bi bi-file-person me-2"></span>
                <p class = "lead">Bio: <%= voluntario.Bio %></p>
              </div>
              <div class = "contacts">
                <span class="bi bi-telephone me-2"></span>
                <p class = "contato">Contato: <%= voluntario.Contato %></p>
                
              </div>
              
              <div>
                <span class = "bi bi-arrow-return-left"></span>
                <a href="/recrutar-voluntario">Voltar</a>
              </div>
              <div class="d-flex justify-content-center"><a class = "btn btn-primary"href="">
                Convidar
                <span class = "bi bi-plus"></span>
              </a>
            </div>

              
          </div>
      <% }); %>
      
    </div>


  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <% if (typeof alerta !== 'undefined' && alerta) { %>
    <script>
        // JavaScript embutido para exibir o alerta passado do Node.js
        window.onload = function() {
            alert("<%= alerta %>");
        };
    </script>
    <% } %>


    
</body>
</html>
